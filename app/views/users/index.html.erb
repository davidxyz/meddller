<% provide(:title, 'All users')%>
<h1>All users</h1>
<%= will_paginate%>

<ul class="users">
	<% @users.each do |user|%>
	<li><%= link_to user.name, site('/users/'+user.name)%>
		<% if current_user.admin? && !current_user?(user)%>
		|<%= link_to "delete", user, method: :delete, confirm: "You sure?"%>
		<%end%>
		</li>
	<%end%>
	</ul> 
<%= will_paginate%>