<%provide(:title,'Submit your post')%>
<section class="micropost_form alone">
<%= form_for(@micropost) do |f|%>
	<%= render 'shared/error_messages', object: f.object%>
	<div class="field">
		<h1 id="micropost_form_title">Self Post</h1>
		 
		<%=f.label :title%>
		<%=f.text_field :title%>
		
		<%= f.text_area :content, placeholder: "Compose new micropost..."%>
		<%=f.hidden_field :medtype, :value=>"self_post"%>
		</div>
		<%= f.submit "Submit",class: "btn btn-large btn-primary"%>
		<%= link_to "image upload?",submit3_path,class:"btn btn-large btn-primary",id: "link_post2"%>
		<%= link_to "link post?",submit_path,class:"btn btn-large btn-primary",id: "link_post"%>
		<%end%>
</section>